<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dark">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="5">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_eshop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/label_eshop"
        android:layout_weight="1"
        android:textAlignment="center"
        android:drawableTint="@color/bottom_tab_color_selector"
        android:textColor="@color/bottom_tab_color_selector"
        android:drawableTop="@drawable/ic_eshop"
        android:drawableTintMode="src_in"
        android:drawablePadding="@dimen/_6sdp"
        android:textSize="@dimen/_8ssp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_eshop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/label_exchange"
        android:textAlignment="center"
        android:textColor="@color/bottom_tab_color_selector"
        android:drawableTint="@color/bottom_tab_color_selector"
        android:drawableTintMode="src_in"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_exchange"
        android:drawablePadding="@dimen/_6sdp"
        android:textSize="@dimen/_8ssp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_launchpads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/label_launchpads"
            android:textAlignment="center"
            android:layout_weight="1"
            android:drawableTint="@color/bottom_tab_color_selector"
            android:drawableTintMode="src_in"
            android:textColor="@color/bottom_tab_color_selector"
            android:drawableTop="@drawable/ic_launchpads"
            android:drawablePadding="@dimen/_6sdp"
            android:textSize="@dimen/_8ssp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_eshop"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/label_wallet"
            android:textAlignment="center"
            android:drawableTint="@color/bottom_tab_color_selector"
            android:drawableTintMode="src_in"
            android:textColor="@color/bottom_tab_color_selector"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_wallet"
            android:drawablePadding="@dimen/_6sdp"
            android:textSize="@dimen/_8ssp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_metaverse"
        android:layout_width="0dp"
        android:layout_height="@dimen/_110sdp"
        android:adjustViewBounds="true"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_metaverse"/>


</androidx.constraintlayout.widget.ConstraintLayout>